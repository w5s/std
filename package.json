{
  "name": "@w5s/core-src",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:packages": "turbo run build",
    "build": "npm-run-all -p \"build:*\"",
    "clean": "turbo run clean",
    "code-analysis": ":",
    "configure": "npm run mrm -- configure",
    "coverage": ":",
    "develop": ":",
    "docs": "md-magic --path './*.md' --ignore='node_modules' && turbo run docs && typedoc .",
    "format:packages": "turbo run format",
    "format:root": "eslint . --ext=mjs,cjs,js,jsx,ts,tsx,json --ignore-pattern='packages/*/**' --fix",
    "format": "npm-run-all -p \"format:*\"",
    "lint:packages": "turbo run lint",
    "lint:root": "eslint . --ext=mjs,cjs,js,jsx,ts,tsx,json --ignore-pattern='packages/*/**'",
    "lint": "npm-run-all -p \"lint:*\"",
    "mrm": "mrm --preset @w5s/mrm-preset",
    "prepare:empty": ":",
    "prepare:husky": "is-ci || husky install",
    "prepare": "npm-run-all -p \"prepare:*\"",
    "release": "is-ci && lerna publish --yes || lerna publish",
    "rescue": "git clean -fdx;yarn install",
    "spellcheck": "cspell --no-progress '**' --exclude='packages/*/**' && turbo run spellcheck",
    "test": "npm-run-all -p \"test:*\"",
    "test:packages": "turbo run test",
    "validate": "npm run build && npm run lint && npm test && npm run spellcheck"
  },
  "commitlint": {
    "extends": [
      "@w5s/commitlint-config"
    ],
    "rules": {}
  },
  "lint-staged": {
    "*.js?(x)": [
      "eslint"
    ],
    "*.ts?(x)": [
      "eslint"
    ],
    "*.json": [
      "eslint"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": [
      "@w5s/eslint-config"
    ],
    "rules": {
      "jsdoc/check-tag-names": "off"
    },
    "root": true
  },
  "eslintIgnore": [
    "lib/",
    "node_modules/",
    "coverage/",
    "build/",
    ".cache/",
    "**/tsconfig.json",
    ".vscode/**",
    "public/"
  ],
  "jest": {
    "preset": "es-jest",
    "projects": [
      "<rootDir>/packages/*"
    ]
  },
  "devDependencies": {
    "@babel/core": "7.18.2",
    "@babel/eslint-parser": "7.18.2",
    "@commitlint/cli": "17.0.2",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.18",
    "@w5s/commitlint-config": "1.0.0-alpha.4",
    "@w5s/eslint-config": "1.0.0-alpha.17",
    "@w5s/mrm-preset": "1.0.0-alpha.13",
    "@w5s/ts-config": "1.0.0-alpha.9",
    "cspell": "6.1.1",
    "es-jest": "1.5.0",
    "eslint": "8.17.0",
    "husky": "8.0.1",
    "is-ci": "3.0.1",
    "jest": "27.5.1",
    "lerna": "5.0.0",
    "lint-staged": "13.0.0",
    "markdown-magic": "2.6.0",
    "markdown-magic-package-json": "2.0.2",
    "markdown-magic-subpackage-list": "1.1.2",
    "mrm": "4.0.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.6.2",
    "turbo": "1.2.16",
    "typedoc": "0.22.17",
    "typescript": "4.7.3"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0",
    "yarn": ">=1.0.0"
  },
  "mrmConfig": {
    "packageArchetype": "workspace"
  },
  "packageManager": "yarn@3.2.1"
}
