{
  "name": "@w5s/core-src",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "code-analysis": ":",
    "configure": "npm run mrm -- configure",
    "coverage": ":",
    "develop": ":",
    "docs": "md-magic --path './*.md' --ignore='node_modules' && turbo run docs && typedoc .",
    "format": "turbo run format",
    "format:root": "eslint . --ext=mjs,cjs,js,jsx,ts,tsx,json,jsonc,json5,yml,yaml --ignore-pattern='packages/*/**' --fix",
    "lint": "turbo run lint",
    "lint:root": "eslint . --ext=mjs,cjs,js,jsx,ts,tsx,json,jsonc,json5,yml,yaml --ignore-pattern='packages/*/**'",
    "mrm": "mrm --preset @w5s/mrm-preset",
    "prepare": "concurrently \"npm:prepare:*\" \":\"",
    "prepare:husky": "is-ci || husky install",
    "prepare:packages": "turbo run prepare",
    "release": "is-ci && lerna publish --yes || lerna publish",
    "rescue": "git clean -fdx;yarn install",
    "spellcheck": "turbo run spellcheck",
    "spellcheck:root": "cspell --no-progress '**' --exclude='packages/*/**'",
    "test": "turbo run test",
    "validate": "turbo run build lint test"
  },
  "commitlint": {
    "extends": [
      "@w5s/commitlint-config"
    ],
    "rules": {}
  },
  "lint-staged": {
    "*.js?(x)": [
      "eslint"
    ],
    "*.ts?(x)": [
      "eslint"
    ],
    "*.{json,jsonc,json5}": [
      "eslint"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": [
      "@w5s/eslint-config"
    ],
    "rules": {
      "jsdoc/check-tag-names": "off",
      "jsdoc/require-example": [
        "warn",
        {
          "checkConstructors": false,
          "exemptedBy": [
            "type"
          ]
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "**/*.spec.*"
        ],
        "rules": {
          "jsdoc/require-example": "off"
        }
      }
    ],
    "root": true
  },
  "eslintIgnore": [
    "lib/",
    "node_modules/",
    "coverage/",
    "build/",
    ".cache/",
    ".vscode/**",
    "public/"
  ],
  "jest": {
    "preset": "es-jest",
    "projects": [
      "<rootDir>/packages/*"
    ]
  },
  "devDependencies": {
    "@babel/core": "7.20.7",
    "@babel/eslint-parser": "7.19.1",
    "@commitlint/cli": "17.3.0",
    "@jest/globals": "latest",
    "@types/node": "17.0.45",
    "@w5s/commitlint-config": "1.0.4",
    "@w5s/cspell-config": "1.0.0-alpha.3",
    "@w5s/eslint-config": "1.0.0-alpha.44",
    "@w5s/mrm-preset": "1.0.0-alpha.36",
    "@w5s/ts-config": "1.0.0-alpha.24",
    "concurrently": "7.6.0",
    "conventional-changelog-gitmoji-config": "latest",
    "cspell": "6.18.0",
    "es-jest": "2.1.0",
    "eslint": "8.30.0",
    "husky": "8.0.2",
    "is-ci": "3.0.1",
    "jest": "29.3.1",
    "lerna": "6.1.0",
    "lint-staged": "13.1.0",
    "markdown-magic": "2.6.1",
    "markdown-magic-package-json": "2.0.2",
    "markdown-magic-subpackage-list": "1.1.2",
    "mrm": "4.1.13",
    "prettier": "2.8.1",
    "ts-node": "10.9.1",
    "turbo": "1.6.3",
    "typedoc": "0.23.23",
    "typescript": "4.9.4"
  },
  "packageManager": "yarn@3.3.1",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=6.0.0",
    "yarn": ">=1.0.0"
  }
}
