{
  "name": "@w5s/core-src",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "build": "concurrently \"npm:build:*\" ",
    "build:packages": "turbo run build",
    "clean": "concurrently \"npm:clean:*\" \":\"",
    "clean:packages": "turbo run clean",
    "code-analysis": ":",
    "configure": "npm run mrm -- configure",
    "coverage": ":",
    "develop": ":",
    "docs": "md-magic --path './*.md' --ignore='node_modules' && turbo run docs && typedoc .",
    "format": "concurrently \"npm:format:*\" \":\"",
    "format:packages": "turbo run format",
    "format:root": "eslint . --ext=mjs,cjs,js,jsx,ts,tsx,json --ignore-pattern='packages/*/**' --fix",
    "lint": "concurrently \"npm:lint:*\" \":\"",
    "lint:packages": "turbo run lint",
    "lint:root": "eslint . --ext=mjs,cjs,js,jsx,ts,tsx,json --ignore-pattern='packages/*/**'",
    "mrm": "mrm --preset @w5s/mrm-preset",
    "prepare": "concurrently \"npm:prepare:*\" \":\"",
    "prepare:husky": "is-ci || husky install",
    "prepare:packages": "turbo run prepare",
    "release": "is-ci && lerna publish --yes || lerna publish",
    "rescue": "git clean -fdx;yarn install",
    "spellcheck": "cspell --no-progress '**' --exclude='packages/*/**' && turbo run spellcheck",
    "test": "concurrently \"npm:test:*\" ",
    "test:packages": "turbo run test",
    "validate": "npm run build && npm run lint && npm test"
  },
  "commitlint": {
    "extends": [
      "@w5s/commitlint-config"
    ],
    "rules": {}
  },
  "lint-staged": {
    "*.js?(x)": [
      "eslint"
    ],
    "*.ts?(x)": [
      "eslint"
    ],
    "*.json": [
      "eslint"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": [
      "@w5s/eslint-config"
    ],
    "rules": {
      "jsdoc/check-tag-names": "off",
      "jsdoc/require-example": [
        "warn",
        {
          "checkConstructors": false,
          "exemptedBy": [
            "type"
          ]
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "**/*.spec.*"
        ],
        "rules": {
          "jsdoc/require-example": "off"
        }
      }
    ],
    "root": true
  },
  "eslintIgnore": [
    "lib/",
    "node_modules/",
    "coverage/",
    "build/",
    ".cache/",
    ".vscode/**",
    "public/"
  ],
  "jest": {
    "preset": "es-jest",
    "projects": [
      "<rootDir>/packages/*"
    ]
  },
  "devDependencies": {
    "@babel/core": "7.18.13",
    "@babel/eslint-parser": "7.18.9",
    "@commitlint/cli": "17.1.1",
    "@types/node": "17.0.45",
    "@w5s/commitlint-config": "1.0.0-alpha.8",
    "@w5s/eslint-config": "1.0.0-alpha.28",
    "@w5s/mrm-preset": "1.0.0-alpha.21",
    "@w5s/ts-config": "1.0.0-alpha.15",
    "concurrently": "7.3.0",
    "conventional-changelog-gitmoji-config": "latest",
    "cspell": "6.8.1",
    "es-jest": "2.0.0",
    "eslint": "8.23.0",
    "husky": "8.0.1",
    "is-ci": "3.0.1",
    "jest": "28.1.3",
    "lerna": "5.4.3",
    "lint-staged": "13.0.3",
    "markdown-magic": "2.6.0",
    "markdown-magic-package-json": "2.0.2",
    "markdown-magic-subpackage-list": "1.1.2",
    "mrm": "4.1.0",
    "prettier": "2.7.1",
    "ts-node": "^10.9.1",
    "turbo": "1.4.3",
    "typedoc": "0.23.11",
    "typescript": "4.8.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=6.0.0",
    "yarn": ">=1.0.0"
  },
  "packageManager": "yarn@3.2.3"
}
