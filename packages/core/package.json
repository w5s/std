{
  "name": "@w5s/core",
  "version": "1.0.0-alpha.0",
  "description": "Standard library",
  "keywords": [
    "fp",
    "functional",
    "task",
    "standard",
    "std"
  ],
  "homepage": "https://github.com/w5s/std/tree/master/packages/std#readme",
  "bugs": {
    "url": "https://github.com/w5s/std/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/w5s/std.git",
    "directory": "packages/core"
  },
  "license": "MIT",
  "author": "Julien Polo <julien.polo@gmail.com>",
  "type": "module",
  "exports": {
    ".": "./lib/index.js",
    "./lib/*": "./lib/*"
  },
  "typings": "./lib/index.d.ts",
  "files": [
    "lib/**/!(*.spec).d.ts",
    "lib/**/!(*.spec).d.ts.map",
    "lib/**/!(*.spec).js.map",
    "lib/**/!(*.spec).js",
    "src/**/!(*.spec).ts",
    "!example/**/*",
    "!*.cjs"
  ],
  "scripts": {
    "build": "concurrently \"npm:build:*\" ",
    "build:src": "tsc",
    "clean": "concurrently \"npm:clean:*\" \":\"",
    "docs": "md-magic --path '**/*.md' --ignore='node_modules'",
    "format": "concurrently \"npm:format:*\" \":\"",
    "format:src": "eslint . --fix --ext=mjs,cjs,js,jsx,ts,tsx,json",
    "lint": "concurrently \"npm:lint:*\" \":\"",
    "lint:src": "eslint . --ext=mjs,cjs,js,jsx,ts,tsx,json",
    "prepare": "concurrently \"npm:prepare:*\" \":\"",
    "spellcheck": "cspell --no-progress '**'",
    "test": "jest .",
    "tsc": "tsc",
    "validate": "npm run lint && npm run build && npm run test"
  },
  "devDependencies": {
    "@jest/globals": "28.1.3"
  },
  "peerDependencies": {
    "typescript": "^3.8.0 || ^4.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "typedocMain": "./src/index.ts"
}
