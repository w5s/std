{
  "name": "@w5s/core-type",
  "version": "1.0.0-alpha.0",
  "description": "Core type modules",
  "keywords": [
    "fp",
    "functional",
    "standard",
    "std",
    "core",
    "types"
  ],
  "homepage": "https://github.com/w5s/std/tree/master/packages/std#readme",
  "bugs": {
    "url": "https://github.com/w5s/std/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:w5s/std.git",
    "directory": "packages/core-type"
  },
  "license": "MIT",
  "author": "Julien Polo <julien.polo@gmail.com>",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist/",
    "src/",
    "!**/*.test-d.ts",
    "!*.d.ts.map",
    "!**/*.spec.*",
    "!**/__tests__/**"
  ],
  "scripts": {
    "build": "npx run-p \"build:*\"",
    "build:tsc": "npx tsup",
    "clean": "npx run-p \"clean:*\"",
    "clean:tsc": "rm -rf dist",
    "docs": "node '../../markdown.mjs'",
    "format": "npx run-p \"format:*\"",
    "format:src": "eslint . --fix --ext=mjs,cjs,js,jsx,ts,tsx,json,jsonc,json5,yml,yaml",
    "lint": "npx run-p \"lint:*\"",
    "lint:src": "eslint . --ext=mjs,cjs,js,jsx,ts,tsx,json,jsonc,json5,yml,yaml",
    "prepare": "npx run-p \"prepare:*\"",
    "prepublishOnly": "npm run clean;npm run build",
    "size-limit": "npx size-limit",
    "spellcheck": "cspell --no-progress '**'",
    "test": "npx run-p \"test:*\"",
    "test:src": "tsc -b tsconfig.test.json",
    "tsc": "tsc",
    "validate": "npm run lint && npm run build && npm run test"
  },
  "devDependencies": {
    "tsup": "8.3.5",
    "typescript": "5.7.2",
    "vite": "latest",
    "vitest": "latest"
  },
  "peerDependencies": {
    "typescript": "^3.8.0 || ^4.0.0 || ^5.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "tsup": {
    "format": [
      "esm"
    ],
    "clean": true,
    "dts": true,
    "entry": [
      "src/index.ts"
    ]
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "310 B"
    }
  ],
  "sideEffect": false
}
