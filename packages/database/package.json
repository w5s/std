{
  "name": "@w5s/database",
  "version": "1.0.0-alpha.0",
  "description": "Database client library",
  "keywords": [
    "fp",
    "functional",
    "task",
    "database",
    "mysql",
    "sqlite",
    "postgresql",
    "client"
  ],
  "homepage": "https://github.com/w5s/std/tree/master/packages/database#readme",
  "bugs": {
    "url": "https://github.com/w5s/std/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:w5s/std.git",
    "directory": "packages/database"
  },
  "license": "MIT",
  "author": "Julien Polo <julien.polo@gmail.com>",
  "type": "module",
  "exports": {
    ".": "./lib/index.js",
    "./lib/*": "./lib/*"
  },
  "typings": "./lib/index.d.ts",
  "files": [
    "lib/**/!(*.spec).d.ts",
    "lib/**/!(*.spec).js.map",
    "lib/**/!(*.spec).js",
    "src/**/!(*.spec).ts",
    "!example/**/*",
    "!*.cjs"
  ],
  "scripts": {
    "build": "concurrently \"npm:build:*\" \":\"",
    "build:tsc": "tsc -b tsconfig.build.json",
    "clean": "concurrently \"npm:clean:*\" \":\"",
    "clean:tsc": "rm -rf lib",
    "docs": "node '../../markdown.mjs'",
    "format": "concurrently \"npm:format:*\" \":\"",
    "format:src": "eslint . --fix --ext=mjs,cjs,js,jsx,ts,tsx,json,jsonc,json5,yml,yaml",
    "lint": "concurrently \"npm:lint:*\" \":\"",
    "lint:src": "eslint . --ext=mjs,cjs,js,jsx,ts,tsx,json,jsonc,json5,yml,yaml",
    "prepare": "concurrently \"npm:prepare:*\" \":\"",
    "prepublishOnly": "npm run clean;npm run build",
    "spellcheck": "cspell --no-progress '**'",
    "test": "concurrently \"npm:test:*\" ",
    "test:src": "jest",
    "tsc": "tsc",
    "validate": "npm run lint && npm run build && npm run test"
  },
  "dependencies": {
    "@types/mysql": "^2.15.7",
    "@types/sqlite3": "^3.1.5",
    "@w5s/app": "^1.0.0-alpha.0",
    "@w5s/core": "^1.0.0-alpha.0",
    "mysql": "^2.17.1",
    "sqlite3": "^5.1.0"
  },
  "devDependencies": {
    "@jest/globals": "29.4.3"
  },
  "peerDependencies": {
    "typescript": "^3.8.0 || ^4.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "typedoc": {
    "entryPoint": "./src/index.ts"
  }
}
