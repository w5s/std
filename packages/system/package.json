{
  "name": "@w5s/system",
  "version": "1.0.0-alpha.0",
  "private": true,
  "description": "System module",
  "keywords": [
    "fp",
    "functional",
    "task",
    "fs"
  ],
  "homepage": "https://github.com/w5s/std/tree/master/packages/system#readme",
  "bugs": {
    "url": "https://github.com/w5s/std/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:w5s/std.git",
    "directory": "packages/system"
  },
  "license": "MIT",
  "author": "Julien Polo <julien.polo@gmail.com>",
  "type": "module",
  "exports": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "files": [
    "dist/",
    "src/",
    "!*.d.ts.map",
    "!**/*.spec.*",
    "!**/__tests__/**",
    "!src/_test/**"
  ],
  "scripts": {
    "build": "npx run-p \"build:*\"",
    "build:tsc": "tsc -b tsconfig.build.json",
    "clean": "npx run-p \"clean:*\"",
    "clean:tsc": "rm -rf dist",
    "docs": "node '../../markdown.mjs'",
    "format": "npx run-p \"format:*\"",
    "format:src": "eslint . --fix --ext=mjs,cjs,js,jsx,ts,tsx,json,jsonc,json5,yml,yaml",
    "lint": "npx run-p \"lint:*\"",
    "lint:src": "eslint . --ext=mjs,cjs,js,jsx,ts,tsx,json,jsonc,json5,yml,yaml",
    "prepare": "npx run-p \"prepare:*\"",
    "prepare:empty": ":",
    "prepublishOnly": "npm run clean;npm run build",
    "size-limit": "npx size-limit",
    "spellcheck": "cspell --no-progress '**'",
    "test": "npx run-p \"test:*\"",
    "test:src": "vitest run",
    "tsc": "tsc",
    "validate": "npm run lint && npm run build && npm run test"
  },
  "dependencies": {
    "@types/node": "^20.14.9",
    "@w5s/byte-size": "^1.0.0-alpha.0",
    "@w5s/core": "^1.0.0-alpha.0",
    "@w5s/error": "^1.0.0-alpha.0",
    "@w5s/task": "^1.0.0-alpha.0",
    "@w5s/time": "^1.0.0-alpha.0"
  },
  "devDependencies": {
    "typescript": "5.9.3",
    "vite": "latest",
    "vitest": "latest"
  },
  "peerDependencies": {
    "typescript": "^3.8.0 || ^4.0.0 || ^5.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "10 kB"
    }
  ],
  "sideEffect": false
}
