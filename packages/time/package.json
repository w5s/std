{
  "name": "@w5s/time",
  "version": "1.0.0-alpha.0",
  "description": "Time manipulation",
  "keywords": [
    "fp",
    "functional",
    "time",
    "standard",
    "std"
  ],
  "homepage": "https://github.com/w5s/std/tree/master/packages/std#readme",
  "bugs": {
    "url": "https://github.com/w5s/std/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:w5s/std.git",
    "directory": "packages/time"
  },
  "license": "MIT",
  "author": "Julien Polo <julien.polo@gmail.com>",
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./dist/*": "./dist/*"
  },
  "typings": "./dist/index.d.ts",
  "files": [
    "dist/",
    "src/",
    "!*.d.ts.map",
    "!**/*.spec.*",
    "!**/__tests__/**"
  ],
  "scripts": {
    "build": "concurrently \"npm:build:*\" \":\"",
    "build:tsc": "tsc -b tsconfig.build.json",
    "clean": "concurrently \"npm:clean:*\" \":\"",
    "clean:tsc": "rm -rf dist",
    "docs": "node '../../markdown.mjs'",
    "format": "concurrently \"npm:format:*\" \":\"",
    "format:src": "eslint . --fix --ext=mjs,cjs,js,jsx,ts,tsx,json,jsonc,json5,yml,yaml",
    "lint": "concurrently \"npm:lint:*\" \":\"",
    "lint:src": "eslint . --ext=mjs,cjs,js,jsx,ts,tsx,json,jsonc,json5,yml,yaml",
    "prepare": "concurrently \"npm:prepare:*\" \":\"",
    "prepublishOnly": "npm run clean;npm run build",
    "size-limit": "npx size-limit",
    "spellcheck": "cspell --no-progress '**'",
    "test": "concurrently \"npm:test:*\" \":\"",
    "test:src": "vitest run",
    "tsc": "tsc",
    "validate": "npm run lint && npm run build && npm run test"
  },
  "dependencies": {
    "@w5s/core": "1.0.0-alpha.0",
    "@w5s/invariant": "1.0.0-alpha.0",
    "@w5s/task": "^1.0.0-alpha.0"
  },
  "devDependencies": {
    "typescript": "5.5.4",
    "vite": "latest",
    "vitest": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "5 kB"
    }
  ]
}
