{
  "name": "@w5s/database-client",
  "version": "1.0.0-alpha.0",
  "description": "Database client library",
  "keywords": [
    "fp",
    "functional",
    "task",
    "database",
    "mysql",
    "sqlite",
    "pgsql",
    "client"
  ],
  "homepage": "https://github.com/w5s/std/tree/master/packages/database-client#readme",
  "bugs": {
    "url": "https://github.com/w5s/std/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/w5s/std.git",
    "directory": "packages/database-client"
  },
  "license": "MIT",
  "author": "Julien Polo <julien.polo@gmail.com>",
  "type": "module",
  "exports": "./lib/index.js",
  "typings": "./lib/index.d.ts",
  "files": [
    "lib/**/!(*.spec).d.ts",
    "lib/**/!(*.spec).js.map",
    "lib/**/!(*.spec).js",
    "src/**/!(*.spec).ts"
  ],
  "scripts": {
    "build": "npm run build:src",
    "build:src": "tsc",
    "clean": "npm run tsc -- --build --clean",
    "docs": "md-magic --path '**/*.md' --ignore='node_modules'",
    "format": "eslint . --ext .js,.ts --fix",
    "lint": "eslint . --ext .js,.ts",
    "test": "jest .",
    "tsc": "tsc",
    "validate": "npm run lint && npm run build && npm run test"
  },
  "eslintConfig": {
    "parserOptions": {
      "project": "./tsconfig.json"
    }
  },
  "eslintIgnore": [
    "lib"
  ],
  "dependencies": {
    "@types/mysql": "^2.15.7",
    "@types/sqlite3": "^3.1.5",
    "@w5s/core": "^1.0.0-alpha.0",
    "mysql": "^2.17.1",
    "sqlite3": "^5.0.0"
  },
  "peerDependencies": {
    "typescript": "^3.8.0 || ^4.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "typedocMain": "./src/index.ts"
}
